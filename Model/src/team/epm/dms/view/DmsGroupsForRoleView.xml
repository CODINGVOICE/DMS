<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE ViewObject SYSTEM "jbo_03_01.dtd">
<!---->
<ViewObject
  xmlns="http://xmlns.oracle.com/bc4j"
  Name="DmsGroupsForRoleView"
  Version="11.1.1.64.93"
  InheritPersonalization="true"
  BindingStyle="OracleName"
  CustomQuery="true"
  PageIterMode="Full"
  UseGlueCode="false"
  OrderBy="NAME"
 >
  <DesignTime>
    <Attr Name="_isExpertMode" Value="true"/>
  </DesignTime>
  <Properties>
    <SchemaBasedProperties>
      <LABEL
        ResId="team.epm.dms.view.DmsGroupsForRoleView_LABEL"/>
    </SchemaBasedProperties>
  </Properties>
  <Variable
    Name="roleId"
    Kind="where"
    Type="java.lang.String"/>
  <Variable
    Name="locale"
    Kind="where"
    Type="java.lang.String">
    <TransientExpression><![CDATA[adf.context.locale]]></TransientExpression>
  </Variable>
  <SQLQuery>
    <![CDATA[SELECT DmsGroup.ID, 
       DmsGroup.NAME,
       DmsGroup.LOCALE
FROM DMS_GROUP DmsGroup
 WHERE exists (select 1
    from dms_group_role DmsGroupRole 
   where DmsGroup.Id=DmsGroupRole.Group_Id
     and DmsGroupRole.role_Id=:roleId)
and DmsGroup.enable_flag='Y'
and DmsGroup.LOCALE=:locale]]>
  </SQLQuery>
  <EntityUsage
    Name="DmsGroup"
    Entity="team.epm.dms.model.DmsGroup"/>
  <ViewAttribute
    Name="Id"
    IsNotNull="true"
    PrecisionRule="true"
    EntityAttrName="Id"
    EntityUsage="DmsGroup"
    AliasName="ID"/>
  <ViewAttribute
    Name="Name"
    PrecisionRule="true"
    EntityAttrName="Name"
    EntityUsage="DmsGroup"
    AliasName="NAME"/>
  <ViewAttribute
    Name="Locale"
    IsNotNull="true"
    PrecisionRule="true"
    EntityAttrName="Locale"
    EntityUsage="DmsGroup"
    AliasName="LOCALE"/>
  <ResourceBundle>
    <PropertiesBundle
      PropertiesFile="ModelBundle"/>
  </ResourceBundle>
</ViewObject>
